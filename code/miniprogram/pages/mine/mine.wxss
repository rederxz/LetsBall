/* pages/mine/mine.wxss */

/* global config */
page {
  --width: 80%;
  --margin-left: 10%;
  --margin-top: 30rpx;
  --line-width: 5rpx;
  background-color: white;
}

.background {
  width: 100%;
  height: 280rpx;
  background-color: #FE6559;
  position: absolute;
  z-index: -1;
}

.userinfo-wrapper {
  width: 86%;
  height: 300rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 7%;
  margin-right: 7%;
  padding-top: 2%;
  padding-bottom: 2%;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  border-radius: 5px 5px 5px 5px;
  color: rgba(16, 16, 16, 100);
  font-size: 14px;
  box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.4);
  border: 1px solid #FE6559;
}

.item-time {
  width: 80%;
  margin-left: 5%;
  margin-right: 5%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: gray;
  font-size: 30rpx;
}

.userinfo-line {
  width: 90%;
  height: 50%;
  margin-top: 2%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.userinfo-avatar-wrapper {
  width: 30%;
  height: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  display: block;
  margin: 0 auto;
  border-radius:50%;
}

.userinfo-words {
  width: 70%;
  height: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.userinfo-nickname {
  width: 90%;
  height: 100%;
  margin-right: 5%;
  margin-left: 5%;
  margin-bottom: 10rpx;

  font-size: 40rpx;
  font-weight: 800;
  text-align: left;
  line-height: 150rpx;
}

.userinfo-stats {
  width: 100%;
  margin-top: 5%;
  margin-bottom: 5%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.userinfo-stats-block, .userinfo-stats-block-tail {
  border: #E5E5E5;
  width: 33%;
  border-right-style:solid;
}

.userinfo-stats-block-tail {
  border-width: 0;
}

.userinfo-stats-title, .userinfo-stats-value {
  text-align: center;  
}

.userinfo-stats-value {
  font-weight: 600;
  font-size: 30rpx;
}

.userinfo-stats-title {
  color: gray;
  font-size: 26rpx;
}

.detail-wrapper {
  width: 86%;
  height: 330rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 7%;
  margin-right: 7%;
  background-color: white;
  display: flex;
  flex-direction: column;
  border-radius: 5px 5px 5px 5px;
  color: rgba(16, 16, 16, 100);
  font-size: 16px;
  box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.4);
  border: 1px solid #FE6559;
}

.detail-header, .tag-header, .credit-header{
  height: 20%;
  width: 90%;
  margin-left: 5%;
  margin-top: 2%;
  font-size: 32rpx;
  font-weight: 900;
}

.detail-content-wrapper, .tag-content-wrapper, .credit-content-wrapper {
  display: flex;
  justify-content: center;
}

.detail-content{
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 5%;
}

.detail-item {
  height: 20% ;
  width: 100%;
  margin-top: 2%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border: #E5E5E5;
  border-bottom-style:solid;
}

.detail-title {
  float: left;
}

.detail-value {
  float:right;
}

.tag-wrapper {
  width: 86%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 7%;
  margin-right: 7%;
  background-color: white;
  display: flex;
  flex-direction: column;
  border-radius: 5px 5px 5px 5px;
  color: rgba(16, 16, 16, 100);
  font-size: 16px;
  box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.4);
  border: 1px solid #FE6559;
}

.tag-content {
  width: 75%;
  margin-bottom: 4%;
  display: flex;
  flex-direction: row;
  justify-content: left;
  flex-wrap: wrap;
}

.tag-content-item, .tag-edit-button{
  height: 180 rpx;

  margin-top: 4%;
  margin-right: 1%;
  margin-left: 1%;
  padding-right: 3%;
  padding-left: 3%;
  padding-top: 1%;
  padding-bottom: 1%;

  background-color: #FCC6C2;
  color: #FE6559;
  border-radius: 18rpx;
  border-color: #FE6559;
  border: 2rpx solid #FE6559;
}

.tag-edit-button {
  background-color: white;
  color: gray;
}

.credit-wrapper {
  width: 86%;
  height: 330rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 7%;
  margin-right: 7%;
  background-color: white;
  display: flex;
  flex-direction: column;
  border-radius: 5px 5px 5px 5px;
  color: rgba(16, 16, 16, 100);
  font-size: 16px;
  box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.4);
  border: 1px solid #FE6559;
}

.credit-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.credit-circle {
  width: 200rpx;
  height: 200rpx;
  line-height: 190rpx;
  border-radius: 50%;
  background-color: rgba(252, 198, 194, 100);
  color: #FE6559;
  font-size: 30px;
  text-align: center;
  box-shadow: 0px 2px 6px 1px rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(254, 101, 89, 100);
}

.develop {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: gray;
  text-decoration-line: underline;
  display: flex;
  justify-content: center;
}