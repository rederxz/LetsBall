  /*添加...*/
  text-overflow:ellipsis;
  margin-left: 5%;
  margin-right: 5%;
  font-size: 30rpx;
}


.add-icon {
  width: 80rpx;
  height: 80rpx;
  bottom: 50rpx;
  right: 80rpx;
}

.button_float {
  position: fixed;
  bottom: 150rpx;
  right: 60rpx;
  width: 135rpx;
  height: 135rpx;
  border-radius: 50%;
  background-color: #FF0A6B;
  box-shadow: 3rpx 3rpx 3rpx 3rpx gray;
  display: flex;
  align-items: center;
  justify-content: center;
}