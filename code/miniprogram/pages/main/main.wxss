/* pages/main/main.wxss */

page {
  background-color: white;
}

.poster {
  height: 300rpx;
}

.poster-swiper {
  height: 100%;
  width: 100%;
}

.poster-image {
  height: 100%;
  width: 100%;
}

.tab-wrapper {
  position: relative;
  display: flex;
  height: 80rpx;
  justify-content: center;
  width: 100%;
  background-color: #FAFAFA;
}

.tab-right-wrapper {
  position: absolute;
  display: flex;
  width: 15%;
  height: 100%;
  right: 0;
}

.tab-right-button {
  color: #a9b7b7;
  padding: 2%;
  margin: 0 !important;
  font-size: 36rpx;
  font-weight: 400;
  border-radius: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-right-icon {
  height: 100%;
  width: 30rpx;
  padding: 2%;
  margin: 0 !important;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-right-image {
  height: 100%;
}

.tab-center-wrapper {
  position: absolute;
  display: flex;
  width: 55%;
  height: 100%;
}

.tab-button-normal {
  color:#a9b7b7;
  padding: 2%;
  font-size: 36rpx;
  font-weight: 500;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 0rpx;
  width: 50% !important;
}

.tab-button-selected {
  padding: 2%;
  font-size: 36rpx;
  font-weight: 700;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 0rpx;
  width: 50% !important;
  color: #FE6559;
  border-bottom: 2px solid #FE6559;
}

.activity-wrapper {
  width: 86%;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
  margin-left: 7%;
  margin-right: 7%;
  padding-top: 2%;
  padding-bottom: 2%;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  border-radius: 16px 16px 16px 16px;
  background-color: rgba(250, 250, 250, 100);
  /* background: linear-gradient(-20deg, #fe645918, rgba(250, 250, 250, 100), rgba(250, 250, 250, 100), rgba(250, 250, 250, 100)); */
  color: rgba(16, 16, 16, 100);
  font-size: 14px;
  /* box-shadow: 1px 2px 2px 0px rgba(0, 0, 0, 0.4); */
  box-shadow: 1px 1px 4px 0 #FE6559, 1px 4px 4px 2px rgba(0, 0, 0, 0.19); 
  font-family: Arial;
}

.item-time {
  width: 80%;
  margin-left: 5%;
  margin-right: 5%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: gray;
  font-size: 30rpx;
  /* background-color: #fe645993; */
  /* border-radius: 4px; */
  /* border-top: 2px solid #fe645979;  */
}

.item-line {
  width: 80%;
  margin-left: 5%;
  margin-right: 5%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.item-picture {
  width: 30%;
  height: 150rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.item-words {
  width: 70%;
  height: 150rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.item-title {
  width: 90%;
  overflow:hidden;
  /*不换行*/
